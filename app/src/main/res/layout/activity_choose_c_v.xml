<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.Apply.ChooseCVActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="Ứng tuyển"
        android:background="#02F1D0"
        >
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        android:padding="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Chọn CV online"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            ></TextView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:id="@+id/listview"
            android:listSelector="#80C3FD"
            ></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom"
            >
            <Button
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:id="@+id/buttonquaylai"
                android:text="Quay lại"
                android:background="@drawable/button_huy"
                android:textAllCaps="false"
                ></Button>
            <Button
                android:background="@drawable/button_login"
                android:textColor="#fff"
                android:layout_marginLeft="20dp"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:id="@+id/buttonungtuyen"
                android:textAllCaps="false"
                android:text="Ứng tuyển"
                ></Button>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>