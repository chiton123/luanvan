<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailedJob.DetailJobAdminActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="#02F1D0"
        app:title="Chi tiết việc làm"
        ></androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="#fff"
        android:paddingBottom="40dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_marginBottom="9dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:id="@+id/hinhanh"
                            android:src="@drawable/map2"
                            android:layout_margin="5dp"
                            ></ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <TextView
                                android:id="@+id/tencongviec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="5dp"
                                android:text="nhan vien kinh doanh"
                                android:textColor="#040404"
                                android:textSize="15sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tencongty"
                                android:textSize="13sp"
                                android:text="cong ty abc"
                                android:textColor="#040404"
                                android:layout_marginLeft="12dp"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:layout_below="@id/hinhanh"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        >
                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/calendar"
                            ></ImageView>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Hạn nộp hồ sơ "
                            android:textColor="#040404"
                            ></TextView>
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/hannop"
                            android:textSize="14sp"
                            android:text="10/10/2020"
                            android:textColor="#040404"
                            ></TextView>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/c_salary"
                            ></ImageView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mức lương:"
                            android:textColor="#FB2323"
                            android:textStyle="bold"
                            ></TextView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 trieu"
                            android:textColor="#FB2323"
                            android:id="@+id/salary"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/map2"
                            ></ImageView>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khu vực:"
                            android:textColor="#0B0B0A"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            ></TextView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 trieu"
                            android:textColor="#090909"
                            android:id="@+id/area"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/hinhthuc"
                            ></ImageView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hình thức:"
                            android:textColor="#0B0B0A"
                            android:textStyle="bold"
                            ></TextView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 trieu"
                            android:id="@+id/hinhthuc"
                            android:textColor="#090909"
                            ></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/numeber1"
                            ></ImageView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số lượng cần tuyển:"
                            android:textColor="#0B0B0A"
                            android:textStyle="bold"
                            ></TextView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 trieu"
                            android:id="@+id/number"
                            android:textColor="#090909"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/kinhnghiem"
                            ></ImageView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kinh nghiệm:"
                            android:textColor="#0B0B0A"
                            android:textStyle="bold"
                            ></TextView>
                        <TextView
                            android:textSize="13sp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 trieu"
                            android:id="@+id/experience"
                            android:textColor="#090909"
                            ></TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    >
                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MÔ TẢ CÔNG VIỆC"
                        android:textStyle="bold"
                        android:textColor="#0B0B0A"
                        ></TextView>
                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/motacongviec"
                        android:text="abc"
                        android:textColor="#494948"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        ></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YÊU CẦU CÔNG VIỆC"
                        android:textStyle="bold"
                        android:textColor="#0B0B0A"
                        ></TextView>
                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yeucaucongviec"
                        android:text="abc"
                        android:textColor="#494948"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        ></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUYỀN LỢI"
                        android:textStyle="bold"
                        android:textColor="#0B0B0A"
                        ></TextView>
                    <TextView
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/quyenloi"
                        android:text="abc"
                        android:textColor="#494948"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        ></TextView>

                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Xác nhận"
            android:textSize="10sp"
            android:gravity="center"
            android:id="@+id/buttonxacnhan"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_xacnhan"
            android:textAllCaps="false"
            ></Button>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Từ chối"
            android:textSize="10sp"
            android:gravity="center"
            android:id="@+id/buttontuchoi"
            android:layout_marginLeft="30dp"
            android:textColor="#000000"
            android:background="@drawable/background_button_view_cv"
            android:textAllCaps="false"
            ></Button>
    </LinearLayout>


</RelativeLayout>