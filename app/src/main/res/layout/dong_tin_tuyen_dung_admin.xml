<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#fff"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:padding="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái"
                        android:textColor="#FF0000"
                        android:id="@+id/statuspost"
                        android:layout_marginLeft="3dp"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@id/layout"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        >
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/anh"
                            android:layout_margin="5dp"
                            ></ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ten cong ty"
                            android:textSize="15sp"
                            android:id="@+id/tencongty"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="#050505"
                            android:layout_toRightOf="@id/anh"
                            android:textStyle="bold"
                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ten cong viec"
                            android:textSize="15sp"
                            android:id="@+id/tencongviec"
                            android:textColor="#050505"
                            android:layout_toRightOf="@id/anh"
                            android:layout_below="@id/tencongty"
                            android:ellipsize="end"
                            android:maxLines="1"
                            ></TextView>

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/anh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/level1"
                            android:background="#fff"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/area_image"
                                android:src="@drawable/area"
                                ></ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khu vực"
                                android:textColor="#040404"
                                android:layout_marginLeft="3dp"
                                ></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hà nội"
                                android:id="@+id/area"
                                android:textColor="#040404"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginLeft="3dp"
                                ></TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:id="@+id/level2"
                            android:layout_below="@id/level1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="#fff"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/salary_image"
                                android:src="@drawable/salary"
                                ></ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mức lương"
                                android:textColor="#040404"
                                android:layout_marginLeft="3dp"
                                ></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10000"
                                android:id="@+id/salary"
                                android:textColor="#040404"
                                android:layout_marginLeft="3dp"
                                ></TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/level3"
                            android:layout_below="@id/level2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:background="#fff"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:id="@+id/time_image"
                                android:src="@drawable/time"
                                ></ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hạn tuyển dụng"
                                android:textColor="#040404"
                                android:layout_marginLeft="3dp"
                                ></TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10000"
                                android:id="@+id/time"
                                android:textColor="#040404"
                                android:layout_marginLeft="3dp"
                                ></TextView>

                        </LinearLayout>


                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    >
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:text="Xác nhận"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:id="@+id/buttonxacnhan"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/button_xacnhan"
                        ></Button>
                    <Button
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:text="Từ chối"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:id="@+id/buttontuchoi"
                        android:layout_marginLeft="30dp"
                        android:textColor="#000000"
                        android:background="@drawable/background_button_view_cv"
                        ></Button>
                </LinearLayout>


            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>