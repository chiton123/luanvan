<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardview"
        app:cardElevation="0dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/mailuser"
                    android:id="@+id/hinh"
                    android:layout_margin="3dp"
                    ></de.hdodenhof.circleimageview.CircleImageView>
                <LinearLayout
                    android:layout_toRightOf="@id/hinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/layout"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtcandidate"
                        android:text="candidate"
                        android:textColor="#070707"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        ></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtmode"
                        android:text="moded"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:background="@drawable/mode"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:layout_marginTop="8dp"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vị trí ứng tuyển: "
                            android:layout_below="@id/cadidateName"
                            android:textColor="#070707"
                            android:textSize="14sp"
                            ></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtposition"
                            android:text="IT network"
                            android:layout_below="@id/cadidateName"
                            android:textColor="#070707"
                            android:textSize="14sp"
                            ></TextView>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#C3B7B7"
                    android:layout_below="@id/layout"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view1"
                    ></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/view1"
                    android:layout_marginTop="15dp"
                    android:id="@+id/linearposition"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="15"
                        android:id="@+id/layout_experience"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="20dp"
                            android:src="@drawable/position"
                            ></ImageView>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="13"
                            android:layout_height="wrap_content"
                            android:text="Developer - FPT SOFTWARE"
                            android:id="@+id/txtexperience1"
                            android:textColor="#070707"
                            android:textSize="14sp"
                            ></TextView>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="15"
                        android:layout_marginTop="5dp"
                        android:id="@+id/layout_study"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="20dp"
                            android:src="@drawable/school"
                            ></ImageView>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="13"
                            android:layout_height="wrap_content"
                            android:text="Major: IT - CTU"
                            android:id="@+id/txtstudy"
                            android:textColor="#070707"
                            android:textSize="14sp"
                            ></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="15"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="17dp"
                            android:src="@drawable/map2"
                            ></ImageView>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="13"
                            android:layout_height="wrap_content"
                            android:text="Địa điểm: Hà Nội"
                            android:id="@+id/txtarea"
                            android:textColor="#070707"
                            android:textSize="14sp"

                            ></TextView>

                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>