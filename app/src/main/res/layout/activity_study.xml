<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.UpdateInfo.StudyActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="Học vấn"
        android:background="#02F1D0"
        ></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#fff"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trường"
                                android:textColor="#050505"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:hint="Đại học Cần Thơ"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/editschool"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chuyên ngành"
                                android:textColor="#050505"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:hint="Quản trị kinh doanh"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/editmajor"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thời gian"
                                android:textColor="#050505"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_margin="5dp"
                                ></TextView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="5"
                                    android:padding="5dp"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bắt đầu"
                                        android:layout_gravity="left"
                                        android:layout_marginBottom="2dp"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="#040404"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        ></TextView>
                                    <EditText
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:textSize="13sp"
                                        android:textColor="#000000"
                                        android:cursorVisible="false"
                                        android:layout_marginTop="5dp"
                                        android:focusable="false"
                                        android:layout_width="120dp"
                                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                                        android:id="@+id/editstart"
                                        android:hint="Bắt đầu"
                                        android:layout_marginLeft="5dp"
                                        android:background="@drawable/edittext_frame"
                                        ></EditText>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="5"
                                    android:padding="5dp"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kết thúc"
                                        android:layout_gravity="left"
                                        android:layout_marginBottom="2dp"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="#040404"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        ></TextView>
                                    <EditText
                                        android:paddingLeft="8dp"
                                        android:paddingRight="8dp"
                                        android:textSize="13sp"
                                        android:textColor="#000000"
                                        android:layout_marginTop="5dp"
                                        android:cursorVisible="false"
                                        android:focusable="false"
                                        android:layout_margin="5dp"
                                        android:layout_width="120dp"
                                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                                        android:id="@+id/editend"
                                        android:hint="Kết thúc"
                                        android:background="@drawable/edittext_frame"
                                        ></EditText>

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mô tả"
                                    android:textColor="#050505"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_margin="5dp"
                                    ></TextView>

                                <EditText
                                    android:textSize="13sp"
                                    android:textColor="#000000"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginRight="6dp"
                                    android:layout_marginLeft="6dp"
                                    android:layout_height="200dp"
                                    android:id="@+id/editmota"
                                    android:padding="8dp"
                                    android:maxLines="10"
                                    android:hint="Mô tả chi tiết quá trình học tập của bản để nhà tuyển dụng có thể hiểu bạn hơn"
                                    android:lines="8"
                                    android:gravity="top|left"
                                    android:background="@drawable/edittext_frame"
                                    ></EditText>
                            </LinearLayout>




                    </LinearLayout>

                    </LinearLayout>


                </FrameLayout>


            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/buttonhuy"
                android:text="Hủy"
                android:background="@drawable/button_huy"
                android:textAllCaps="false"
                ></Button>
            <Button
                android:background="@drawable/button_login"
                android:textColor="#fff"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/buttoncapnhat"
                android:textAllCaps="false"
                android:text="Cập nhật"
                ></Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>