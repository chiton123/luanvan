<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".ui.fragment.login_f.RegisterFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:background="#fff"
        >
        <EditText
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editemail"
            android:hint="Email"
            android:drawableLeft="@drawable/email1"
            android:drawablePadding="20dp"
            ></EditText>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editname"
            android:hint="Họ tên"
            android:drawableLeft="@drawable/user1"
            android:drawablePadding="20dp"
            ></EditText>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editpass"
            android:hint="Mật khẩu"
            android:drawableLeft="@drawable/search3"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            ></EditText>
        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editpass2"
            android:hint="Nhập lại mật khẩu"
            android:drawableLeft="@drawable/search3"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            ></EditText>
        <Button
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:text="Đăng ký"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/buttondangky"
            android:layout_height="40dp"
            android:background="@drawable/button_login"
            ></Button>

    </LinearLayout>


</LinearLayout>