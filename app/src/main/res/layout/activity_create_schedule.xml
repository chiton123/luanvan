<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.schedule.CreateScheduleActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="Đặt lịch hẹn ứng viên"
        android:background="#02F1D0"
        ></androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vị trí"
                        android:textColor="#040404"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        ></TextView>
                    <EditText
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                        android:id="@+id/editposition"
                        android:background="@drawable/edittext_frame"
                        ></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ứng viên"
                        android:textColor="#040404"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        ></TextView>
                    <EditText
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="13sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                        android:id="@+id/editcandidate"
                        android:background="@drawable/edittext_frame"
                        ></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại lịch"
                        android:textColor="#040404"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        ></TextView>
                    <EditText
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="13sp"
                        android:cursorVisible="false"
                        android:textColor="#000000"
                        android:focusable="false"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                        android:id="@+id/editkindschedule"
                        android:background="@drawable/edittext_frame"
                        ></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="5"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày hẹn"
                            android:layout_gravity="left"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#040404"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            ></TextView>
                        <EditText
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="13sp"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:id="@+id/editdate"
                            android:background="@drawable/edittext_frame"
                            ></EditText>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ bắt đầu"
                        android:textColor="#040404"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        ></TextView>
                    <EditText
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="13sp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                        android:id="@+id/editstart"
                        android:background="@drawable/edittext_frame"
                        ></EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ kết thúc"
                        android:textColor="#040404"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        ></TextView>
                    <EditText
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                        android:id="@+id/editend"
                        android:background="@drawable/edittext_frame"
                        ></EditText>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú"
                        android:textColor="#040404"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        ></TextView>
                    <EditText
                        android:padding="8dp"
                        android:textSize="13sp"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="120dp"
                        android:id="@+id/editnote"
                        android:maxLines="10"
                        android:lines="8"
                        android:gravity="top|left"
                        android:background="@drawable/edittext_frame"
                        ></EditText>
                </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    >
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="Lưu"
                        android:background="@drawable/button_corner"
                        android:id="@+id/buttonluu"
                        android:textColor="#fff"
                        android:textAllCaps="false"
                        ></Button>
                    <Button
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:text="Hủy"
                        android:background="@drawable/button_huy_xam"
                        android:id="@+id/buttonhuy"
                        android:textColor="#fff"
                        android:textAllCaps="false"
                        ></Button>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

    </ScrollView>
</LinearLayout>