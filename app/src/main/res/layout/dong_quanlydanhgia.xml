<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:layout_margin="3dp"
        app:cardBackgroundColor="#FBFDFD"
        app:cardElevation="0dp"

        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ten ung vien"
                    android:textSize="15sp"
                    android:textColor="#6200EA"
                    android:id="@+id/txtcandidate"
                    />

                <RatingBar
                    android:layout_below="@id/txtcandidate"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rating"
                    android:rating="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    style="@style/RatingBar"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"></RatingBar>
                <TextView
                    android:layout_marginTop="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DANH GIA"
                    android:id="@+id/txtremark"
                    android:textColor="#838383"
                    android:textSize="14sp"
                    ></TextView>

                <Button
                    android:id="@+id/buttondelete"
                    android:layout_width="83dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/txtremark"
                    android:layout_alignParentRight="true"
                    android:layout_margin="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/button_red"
                    android:text="XÃ³a"
                    android:textColor="#fff"
                    android:textSize="12sp"></Button>



            </RelativeLayout>

        </FrameLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>