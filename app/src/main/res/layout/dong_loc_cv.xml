<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    >
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user2"
        android:id="@+id/hinh"
        android:layout_margin="3dp"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cadidateName"
        android:text="candidate"
        android:layout_toRightOf="@id/hinh"
        android:textColor="#070707"
        android:textSize="16sp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="email"
        android:layout_below="@id/cadidateName"
        android:layout_toRightOf="@id/hinh"
        android:textColor="#070707"
        android:textSize="16sp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:text="status"
        android:layout_below="@id/email"
        android:layout_toRightOf="@id/hinh"
        android:textColor="#070707"
        android:textSize="16sp"
        ></TextView>
    <Button
        android:layout_margin="5dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/buttonthaotac"
        android:text="Thao tÃ¡c"
        android:background="#C3C3BF"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:layout_below="@id/status"
        android:drawableRight="@drawable/expandarrow"
        android:paddingRight="5dp"
        ></Button>
</RelativeLayout>