<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.cv_content.CVInfoActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="Tạo CV"
        android:background="#02F1D0"
        ></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="11"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:text="Thông tin liên hệ"
                            android:textSize="20sp"
                            android:textColor="#070707"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Họ tên"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/name"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vị trí ứng tuyển"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/position"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số điện thoại"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/phone"
                                android:inputType="number"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Địa chỉ email"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/email"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Địa chỉ"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/address"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giới tính"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/gender"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày sinh"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                ></TextView>
                            <EditText
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:id="@+id/birthday"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:background="@drawable/edittext_frame"
                                ></EditText>
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

            </ScrollView>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonhuy"
                    android:background="@drawable/button_huy"
                    android:text="Hủy"
                    android:textAllCaps="false"
                    ></Button>
                <Button
                    android:layout_marginLeft="20dp"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/buttonluu"
                    android:background="@drawable/button_login"
                    android:text="Lưu"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>