<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        android:background="#02F1D0"
        app:title="Thông tin cá nhân"
        ></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:background="#fff"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:id="@+id/scrollview"

            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linear2"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_marginTop="15dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và tên"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:hint="Họ tên"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:id="@+id/editname"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vị trí"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:focusable="false"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:id="@+id/editposition"
                            android:cursorVisible="false"
                            android:hint="Vị trí"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày sinh"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:focusable="false"
                            android:hint="Ngày sinh"
                            android:layout_marginTop="5dp"
                            android:cursorVisible="false"
                            android:layout_width="match_parent"
                            android:id="@+id/editbirthday"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giới tính"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Nam"
                                android:id="@+id/radionam"
                                ></RadioButton>
                            <RadioButton
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Nữ"
                                android:id="@+id/radionu"
                                ></RadioButton>

                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ hiện tại"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>

                        <EditText
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:hint="Quận 1, TP HCM"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:id="@+id/editaddress"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="7dp"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khu vực muốn làm việc"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                ></TextView>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/addnew"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/imgaddkhuvuc"
                                ></ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_area"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:background="@drawable/textview_frame"
                            >
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:id="@+id/recycleview"
                                ></androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="7dp"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngành nghề có kinh nghiệm"
                                android:textColor="#040404"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                ></TextView>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/addnew"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/imgaddnganhnghe"
                                ></ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/layout_profession"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:background="@drawable/textview_frame"
                            >
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:id="@+id/recycleviewprofession"
                                ></androidx.recyclerview.widget.RecyclerView>

                        </LinearLayout>


                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email liên lạc"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:hint="nguyenvana@gmail.com"
                            android:focusable="false"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:id="@+id/editemail"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại liên lạc"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:hint="032323232"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:id="@+id/editphone"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="?attr/dropdownListPreferredItemHeight"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mô tả"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="200dp"
                            android:id="@+id/editmota"
                            android:padding="8dp"
                            android:maxLines="10"
                            android:lines="8"
                            android:gravity="top|left"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>



                </LinearLayout>

            </FrameLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/buttonhuy"
                android:text="Hủy"
                android:background="@drawable/button_huy"
                android:textAllCaps="false"
                ></Button>
            <Button
                android:background="@drawable/button_login"
                android:textColor="#fff"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/buttoncapnhat"
                android:text="Cập nhật"
                android:textAllCaps="false"
                ></Button>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>