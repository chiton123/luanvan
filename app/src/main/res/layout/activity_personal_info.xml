<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.User.PersonalInfoActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
        app:title="Thông tin cá nhân"
        ></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="13"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:id="@+id/scrollview"

            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/linear2"
                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/user2"
                        android:layout_gravity="center_horizontal"
                        ></de.hdodenhof.circleimageview.CircleImageView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và tên"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:layout_margin="5dp"
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:id="@+id/editname"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vị trí"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:layout_margin="5dp"
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:id="@+id/editposition"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày sinh"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:layout_margin="5dp"
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:id="@+id/editbirthday"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giới tính"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Nam"
                                android:id="@+id/radionam"
                                ></RadioButton>
                            <RadioButton
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Nữ"
                                android:id="@+id/radionu"
                                ></RadioButton>

                        </RadioGroup>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ hiện tại"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:layout_margin="5dp"
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:id="@+id/editaddress"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email liên lạc"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:layout_margin="5dp"
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:id="@+id/editemail"
                            android:background="@drawable/edittext_frame"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại liên lạc"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:layout_margin="5dp"
                            android:layout_width="300dp"
                            android:layout_height="30dp"
                            android:id="@+id/editphone"
                            android:background="@drawable/edittext_frame"
                            android:inputType="number"
                            ></EditText>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mô tả"
                            android:textColor="#050505"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            ></TextView>
                        <EditText
                            android:layout_margin="5dp"
                            android:layout_width="300dp"
                            android:layout_height="100dp"
                            android:background="@drawable/edittext_frame"
                            android:id="@+id/editmota"
                            android:lines="8"
                            ></EditText>
                    </LinearLayout>



                </LinearLayout>

            </FrameLayout>

        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/buttonhuy"
                android:text="Hủy"
                android:background="@drawable/button_huy"
                ></Button>
            <Button
                android:background="@drawable/button_login"
                android:textColor="#fff"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:id="@+id/buttoncapnhat"
                android:text="Cập nhật"
                ></Button>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>