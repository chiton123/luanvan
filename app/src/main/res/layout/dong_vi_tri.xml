<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <TextView
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Lap trinh vien Java"
                android:textColor="#070707"
                android:textSize="13sp"
                android:textStyle="bold"
                ></TextView>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/deletebin"
                    android:id="@+id/imgdelete"
                    ></ImageView>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa"
                    android:textColor="#F30C06"
                    android:textSize="13sp"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:text="Đang tuyển dụng"
                android:textColor="#03C80B"
                android:textSize="13sp"
                ></TextView>
            <TextView
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:text="20/11/2000 - 20/12/2000"
                android:textColor="#070707"
                android:textSize="13sp"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textview_frame"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FF0000"
                    android:textSize="13sp"
                    android:id="@+id/txthoso"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồ sơ"
                    android:textColor="#FF0000"
                    android:textSize="13sp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textview_frame"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:id="@+id/txthosomoi"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hồ sơ mới"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textview_frame"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:id="@+id/txtphongvan"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phỏng vấn"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textview_frame"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:id="@+id/txtdilam"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đi làm"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/textview_frame"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:id="@+id/txtloai"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    ></TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:text="Xem"
                android:id="@+id/buttonxem"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="13sp"
                android:background="@drawable/button_xem"
                ></Button>
            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Dừng tuyển"
                android:textSize="13sp"
                android:id="@+id/buttondungtuyen"
                android:textColor="#000000"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/button_dungtuyen"
                ></Button>
            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textSize="13sp"
                android:text="Chỉnh sửa"
                android:id="@+id/buttonchinhsua"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/button_chinhsua"
                ></Button>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>