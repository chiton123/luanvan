<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="7dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="22sp"
                android:textColor="#000000"
                android:id="@+id/txtday"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T7"
                android:textSize="22sp"
                android:textColor="#000000"
                android:id="@+id/txtmonth"
                ></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#F6FBFB"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="7dp"
                        android:id="@+id/layout"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            >
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/note4"
                                android:id="@+id/img"
                                ></ImageView>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hen phong van"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:id="@+id/txttype"
                                ></TextView>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ten vi tri"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:id="@+id/txtposition"
                            ></TextView>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ten cong ty"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:id="@+id/txtcompany"
                            ></TextView>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:11 - 11:20"
                            android:textSize="13sp"
                            android:textColor="#03DA0C"
                            android:id="@+id/txttime"
                            ></TextView>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#000000"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/view"
                            ></View>
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Note"
                            android:textSize="13sp"
                            android:textColor="#000000"
                            android:id="@+id/txtnote"
                            ></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/layout_candidate"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/txtline"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:text="- - - - - - - - - - - - - - - - - "
                                android:layout_marginLeft="10dp"
                                ></TextView>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chờ ứng viên phản hồi"
                                android:textSize="13sp"
                                android:textColor="#FF0000"
                                android:id="@+id/txtstatus"
                                ></TextView>
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ứng viên muốn ..."
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:id="@+id/txtnotecandidate"
                                ></TextView>
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/userprofile"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        ></ImageView>

</RelativeLayout>
